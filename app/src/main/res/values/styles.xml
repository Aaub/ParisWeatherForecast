<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="card_view">
        <item name="android:background">@color/card_background</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_view_radius_big</item>
    </style>

    <style name="weather_value_text_view">
        <item name="android:background">@drawable/background_weather_value_text_view</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:fontFamily">@font/font_comic_bubble</item>
        <item name="android:textColor">@color/weather_value_textview_text_color</item>
    </style>

</resources>
